# Application
APP_NAME=Universal Template Builder
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/template_builder
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Storage (S3/MinIO)
STORAGE_TYPE=local
STORAGE_BUCKET=template-builder-assets
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=
LOCAL_STORAGE_PATH=./storage

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Rendering
MAX_PDF_SIZE_MB=50
MAX_IMAGE_SIZE_MB=10
RENDER_TIMEOUT=60
PREVIEW_DPI=150
EXPORT_DPI=300

# Limits
MAX_ELEMENTS_PER_TEMPLATE=1000
MAX_TEMPLATE_SIZE_MB=10
MAX_TEMPLATES_PER_USER=100

# WebSocket
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
